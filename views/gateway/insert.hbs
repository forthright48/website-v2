<div class="box u-fill-view">
    <div class="any items">
        <form>
            <h2>Common Info</h2>
            <div class="box">
                <div class="any items">
                    <label for="type">Type:</label>
                    <select class="u-full-width" id="type" name="type" required="">
                        <option disabled selected value>Select a Type</option>
                        <option value="Folder">Folder</option>
                        <option value="Text">Text</option>
                        <option value="Problem">Problem</option>
                        <option value="Hint">Hint</option>
                    </select>
                </div>
                <div class="any items">
                    <label for="parentId">Parent ID:</label>
                    <input class="u-full-width" type="text" id="parentId" name="parentId" value="{{parentID}}" required disabled>
                </div>
            </div>

            <div class="box">
                <div class="any items">
                    <label for="ind">Index:</label>
                    <input class="u-full-width" type="number" id="ind" name="ind" value="" required>
                </div>
                <div class="any items">
                    <label for="name">Name:</label>
                    <input class="u-full-width" type="text" id="name" name="name" value="" required>
                </div>
            </div>

            <h2>For Text</h2>
            <div class="box">
                <div class="any items">
                    <label for="body">Body:</label>
                    <textarea class="u-full-width" id="body" name="body"></textarea>
                </div>
            </div>

            <h2>For Problem</h2>
            <div class="box">
                <div class="any items">
                    <label for="platform">Platform:</label>
                    <select class="u-full-width" id="platform" name="platform">
                        <option disabled selected value>Select a Platform</option>
                        <option value="HR">HackerRank</option>
                        <option value="LOJ">LightOJ</option>
                        <option value="UVa">UVa</option>
                        <option value="SPOJ">SPOJ</option>
                    </select>
                </div>
                <div class="any items">
                    <label for="pid">Problem ID:</label>
                    <input class="u-full-width" type="text" id="pid" name="pid" value="">
                </div>
            </div>
            <div class="box">
                <div class="any items">
                    <label for="link">Problem ID:</label>
                    <input class="u-full-width" type="text" id="link" name="link" value="">
                </div>
            </div>

            <div class="box">
                <div class="any items">
                    <label for="hint">Body:</label>
                    <textarea class="u-full-width" id="hint" name="hint"></textarea>
                </div>
            </div>

            <div class="box">
                <div class="any items u-text-center">
                    <input type="submit" formmethod="post" formaction="/admin/gateway/insert" value="Insert">
                </div>
            </div>
        </form>
    </div>
</div>
